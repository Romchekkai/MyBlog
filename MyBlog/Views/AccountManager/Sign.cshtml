@using MyBlog.Models.AccountModel;
@model MyBlog.Models.AccountModel.SignView;

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="~/css/reglogmenu.css" asp-append-version="true">
<div class="bodylog">
    <div class="loginwr">
        <div class="form-box login">
            <h2 class="animation" style="--i:0; --j:12;">login</h2>
            <form method="post" asp-controller="AccountManager" asp-action="Login">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="input-box animation" style="--i:1; --j:13;">
                    <input asp-for=LoginViewModel.Login type="text" required>
                    <span asp-validation-for=LoginViewModel.Login class="text-danger"></span>
                    <label for="Username">Login</label>
                </div>
                <div class="input-box animation" style="--i:2; --j:14;">
                    <input asp-for=LoginViewModel.Password type="password" required>
                    <span asp-validation-for=LoginViewModel.Password class="text-danger"></span>
                    <label>Password</label>
                </div>
                <button type="submit" class="loginbtn animation" style="--i:5; --j:15;">Login</button>
                <div class="logreg-link animation" style="--i:4; --j:16;">
                    <p>
                        Нет аккаунта?
                        <a href="#" class="register-link animation" id="register-link">Регистрация</a>
                    </p>
                </div>
            </form>
        </div>
        <div class="info-text login">
            <h2 class="animation" style="--i:0; --j:12;">Добро <br>пожаловать</h2>
            <p class="animation" style="--i:1; --j:13;">Мы рады вас видеть снова!</p>
        </div>
        <div class="form-box register">
            <h2 class="animation" style="--i:15; --j:0;">Регистрация</h2>
            <form method="post" asp-controller="Register" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="input-box animation" style="--i:16; --j:1;">
                    <span asp-validation-for=RegisterViewModel.Login></span>
                    <input asp-for=RegisterViewModel.Login type="text" required>                    
                    <label for="Username">Login</label>
                </div>
                <div class="input-box animation" style="--i:17; --j:2;">
                    <span asp-validation-for="RegisterViewModel.Email" style="color="black"" class="text-danger"></span>
                    <input asp-for=RegisterViewModel.Email type="email" required>                   
                    <label for="email">E-mail</label>
                </div>
                <div class="input-box animation" style="--i:18; --j:3;">
                    <span asp-validation-for=RegisterViewModel.Password class="text-danger"></span>
                    <input asp-for=RegisterViewModel.Password type="password" required>                   
                    <label>Password</label>
                </div>
                <div class="input-box animation" style="--i:19; --j:4;">
                    <input asp-for=RegisterViewModel.PasswordConfirm type="password" required>
                    <label><span asp-validation-for=RegisterViewModel.Password class="text-danger"></span></label>
                </div>
                <button type="submit" class="loginbtn animation" style="--i:19; --j:4;">Регистрация</button>
                <div class="logreg-link animation" style="--i:20; --j:5;">
                    <p>
                        Уже есть аккаунт?
                        <a href="#" class="login-link">Войти</a>
                    </p>
                </div>
            </form>
        </div>
        <div class="info-text register">
            <h2 class="animation" style="--i:15; --j:0;">Добро <br>пожаловать</h2>
            <p class="animation" style="--i:16; --j:1;">Регистрируйтесь в нашем блоге!</p>
        </div>
    </div>
    <script src="~/js/reglogmenu.js" asp-append-version="true"></script>
</div>


