@model MyBlog.Models.AccountModel.TagViewModel
<link rel="stylesheet" href="~/css/articleEditForm.css" asp-append-version="true">
<div class="tag-form">
    <form asp-action="EditTag" asp-controller="ArticleManager" asp-route-id="@Model.Id" method="post">
        <input type="" asp-for="Id" style="display: none" />
        <input type="" asp-for="ArticleId" style="display: none" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <label asp-for="Name">Тэг</label>
        <input type="text" asp-for="Name" />
        <button type="submit" class="save-btn">
            Сохранить
        </button>
    </form>
    <a href='javascript: history.length > 1 ? history.go(-1): null'>Назад</a>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>